<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yash007.sportsapplication.CreateTeamActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        >

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/teamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_weight="10"
                android:hint="@string/teamName"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>


        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/teamSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="10"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:hint="@string/sport"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>

        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10">

            <Spinner
                android:id="@+id/teamAgeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:padding="10dp"
                android:popupBackground="@color/colorBackground"
                android:layout_margin="10dp"
                android:entries="@array/ageList"/>
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10">

            <Spinner
                android:id="@+id/teamGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="10"
                android:padding="10dp"
                android:popupBackground="@color/colorBackground"
                android:entries="@array/genderList"
                 />
        </TableRow>

        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10">

            <EditText
                android:id="@+id/teamLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_weight="10"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:hint="@string/location"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>

        </TableRow>


        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/teamCreateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/createTeam"
                android:onClick="doCreateTeam"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:textColor="@color/colorText"/>

        </TableRow>
    </TableLayout>

</LinearLayout>
