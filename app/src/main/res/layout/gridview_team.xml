<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gridview_design"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:divider="@color/colorPrimaryDark"
    android:dividerPadding="5dp"
    >

    <ImageView
        android:id="@+id/teamPicGrid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/team_grid"
        android:contentDescription="@string/teamName"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teamNameGrid"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teamGroupGrid"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/colorText"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/teamIdGrid"
            android:visibility="gone"
            />
    </LinearLayout>



</LinearLayout>