<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yash007.sportsapplication.ProfileActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:stretchColumns="1"
                >

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="9"
                    >

                    <ImageButton
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/email"
                        android:background="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/user_imageview"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user"/>

                    <ImageButton
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:src="@drawable/phone"
                        android:background="@color/colorPrimary"/>

                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/colorText"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toronto, Ontario"
                        android:layout_marginTop="7dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center_horizontal"/>

                </TableRow>


            </TableLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="9"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/email_card"
                    android:layout_weight="1"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_weight="7"
                    android:padding="10dp"
                    >

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User's Email id"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="9"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/phone_card"
                    android:layout_weight="1"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_weight="7"
                    android:padding="10dp"
                    >

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User's Phone number"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="9"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/gender_card"
                    android:layout_weight="1"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_weight="7"
                    android:padding="10dp"
                    >

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User's Gender"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="9"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/status_card"
                    android:layout_weight="1"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_weight="7"
                    android:padding="10dp"
                    >

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User's status"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="9"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_card"
                    android:layout_weight="1"
                    />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_weight="7"
                    android:padding="10dp"
                    >

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Notification"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User's Email notification"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorText"/>
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_card"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>



